<div class="card-box mb-4" style="max-width: 374px;">
  <div class="card-card col justify-content-evenly">

    <div class="col-md-7">
      <div class="card-body">

        <div class="text-dates">
          <div class="medium-text">
            <p class="card-medium-text"><small>Du <%= choice.answer.split("to")[0] %></small></p>
            <p class="card-medium-text"><small>Au <%= choice.answer.split("to")[1] %></small></p>
          </div>
        </div>
      </div>
    </div>

    <div class="check-box col-md-1" id="choice_square_<%= choice.id %>">
      <span style="display: none">
        <%= button.radio_button %>
      </span>

      <!-- Vérification si l'utilisateur a déjà voté pour cette option -->
      <% if current_user.votes.exists?(choice_id: choice.id) %>
        <!-- Case cochée si l'utilisateur a déjà voté -->
        <i class="check-box-checked fa-solid fa-check-square"></i>
      <% else %>
        <!-- Case non cochée sinon -->
        <i class="check-box-empty fa-regular fa-square"></i>
      <% end %>
    </div>
  </div>
</div>
