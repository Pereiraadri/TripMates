<div class="card-hebergement d-flex justify-content-center">
    <div class="card-hebergement-container">
      <div class="image-hebergement-card">
        <%# <img src="..." class="img-fluid rounded-start" alt="...">%>
        <% if @poll.results.any? %>
          <% @poll.choices.sort_by { |choice| choice.votes.count }.reverse.each do |choice| %>
          <% end %>
        <% end %>

        <% if choice.poll.category == "hebergement"%>
            <img src="<%= choice.metadata["image"] %>" alt="img-hebergement" class="img-hbgt-card">
        <% end %>
      </div>
      <div class="content-hebergement">
        <div class="card-body">
          <h5 class="card-title"><%=choice.answer.truncate(24)%>
          </h5>
          <div class="content-description">
            <% if choice.poll.category == "hebergement"%>
              <%= choice.metadata["description"].truncate(42) %>
            <% end %>
          </div>
          <div class="small-text-heb">
            <p class="card-text"><small class="text-body-heb">
              <% if choice.poll.category == "hebergement"%>
                Prix: <%= choice.metadata["prix"] %>
              <% end %>
            </small></p>
          </div>
        </div>
      </div>

      <div class="drag col-md-1" id="choice_square_<%= choice.id %>">
        <i class="drag-icon fa-solid fa-grip"></i>
      </div>
    </div>
</div>
