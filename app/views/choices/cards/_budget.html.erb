<div class="card-box mb-4" style="max-width: 374px;" id="choice-<%= choice.id %>">
  <div class="card-card col justify-content-evenly">
    <div class="image-card col-md-4">
      <%# <img src="..." class="img-fluid rounded-start" alt="...">%>
      <i class="fa-solid fa-sack-dollar poll-sondage"></i>
    </div>
    <div class="col-md-7">
      <div class="card-body">
        <div class="text-dates">
          <div class="medium-text">
            <p class="card-medium-text price-budget"><small><%= choice.answer %> €</small></p>
            <p class="card-medium-text price-budget"><small></small></p>
          </div>
        </div>
      </div>
    </div>
    <div class="check-box col-md-1" id="choice_square_<%= choice.id %>">
      <span style="display: none">
        <%= button.radio_button %>
      </span>

      <!-- Ajout de la condition pour gérer l'état coché -->
      <% if current_user.votes.exists?(choice_id: choice.id) %>
        <i class="check-box-checked fa-solid fa-check-square"></i> <!-- Case cochée -->
      <% else %>
        <i class="check-box-empty fa-regular fa-square"></i> <!-- Case vide -->
      <% end %>
    </div>
  </div>
</div>
