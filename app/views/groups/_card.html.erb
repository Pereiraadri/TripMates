<div class="card-groupe-container mb-3 d-flex justify-content-center">
  <div class="card bg-light border-orange" style="max-width: 810px;">
    <div class="row g-0">
      <h5 class="card-title-groupe text-orange"><%= group.title %></h5>
      <div class="col-md-4 d-flex align-items-center justify-content-center">
          <% if group.cover_banner.attached? %>
            <%= cl_image_tag group.cover_banner.key %>
          <% end %>
      </div>
      <div class="col-md-8">
        <div class="card-body-groupe text-end">

          <p class="card-text text-orange">
            <small class="text-muted">
              <% group.users.each do |user| %>
                <img
                  src="<%= user.avatar.attached? ? url_for(user.avatar) : 'default_avatar.jpg' %>"
                  class="rounded-circle me-2"
                  width="32"
                  height="32"
                  alt="Avatar de <%= user.email %>">
              <% end %>
            </small>
          </p>
          <div class="d-flex align-items-center justify-content-end">
            <small class="text-orange">Membres du groupe</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
