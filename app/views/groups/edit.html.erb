<div class="container d-flex text-center justify-content-center">
  <%= form_with model: @group, method: :patch do |f| %>
    <div class="name-trip">
      <%= f.label :title, label: false, value: "Nom du groupe"%>
      <div class="name-trip-banner">
        <%= f.text_field :title, placeholder: "Nom du groupe", class: "rounded-input" %>
      </div>
    </div>
    <div class="group-description">
      <%= f.label :description %>
      <div class="group-description-banner">
        <%= f.text_area :description, placeholder: "DÃ©cris ton groupe", class: "rounded-input" %>
      </div>
    </div>
    <div class="group-image mb-16">
      <%= f.label :cover_banner, value: "Photo du Groupe"%>
      <div class="banner-image">
        <div class="picture-choice text-center">
          <button type="button" class="btn btn-light shadow-sm"
            onclick="document.getElementById('group_cover_banner').click()">Choisis une photo</button>
          <%= f.file_field :cover_banner, class: 'form-text custom-file-input' %>
          <%# <%= f.input :image, label:false, input_html: { class: 'form-text'}, as: :file %>

        </div>

      </div>
    </div>
    <%# bouton creer  %>
    <div class="button d-flex justify-content-center">
      <button type="submit" class="button-pill medium-green">
        Modifier
          <i class="right-arrow fa-regular fa-circle-right"></i>
      </button>
    </div>
  <% end %>
</div>
