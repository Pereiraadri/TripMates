<h2>Membres actuels</h2>

<ul>
  <% @members.each do |member| %>
    <li>
        <% if member.avatar.attached? %>
          <%= image_tag member.avatar.variant(resize_to_limit: [50, 50]), alt: "#{member.name}'s avatar", class: "avatar" %>
        <% else %>
          <%= image_tag "default_avatar.png", alt: "user_avatar", class: "avatar" %>
        <% end %>
    </li>
  <% end %>
</ul>

