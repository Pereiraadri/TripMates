<h1><%= @group.title %></h1>
<p><%= @group.description %></p>

<h2>Membres actuels</h2>
<ul>
  <% @group.users.each do |member| %>
    <li><%= member.email %></li>
  <% end %>
</ul>



<div data-controller="clipboard" data-clipboard-success-content-value="Lien copié !">
  <input type="hidden" value="<%= invite_groups_url(invite_token: @group.invite_token) %>" data-clipboard-target="source" />
  <button type="button" class="btn btn-light shadow-sm" data-action="clipboard#copy" data-clipboard-target="button">
    <i class="fa-regular fa-copy"></i>
    Copier le lien d'invitation
  </button>
</div>


<!-- app/views/groups/show.html.erb -->
<h1><%= @group.title %></h1>
<p><%= @group.description %></p>

<% if current_user == @group.owner %>
  <h3>Inviter des membres :</h3>
  <%= button_to 'Générer un lien d\'invitation', send_invite_group_path(@group), method: :post %>
<% end %>

<!-- Afficher le lien d'invitation s'il est dans flash -->
<% if flash[:notice] %>
  <p><strong>Voici votre lien d'invitation :</strong> <%= flash[:notice] %></p>
<% end %>
