<%= simple_form_for Vote.new, url: choice_votes_path(:choice_id), method: :post do |f| %>
  <%= f.collection_radio_buttons :choice_id, @poll.choices, :id, :answer, item_wrapper_tag: :div do |b| %>
    <div>
      <%= b.radio_button %>
      <%= b.label %>
    </div>
  <% end %>
  <div class="button d-flex justify-content-center">
      <button type="submit" class="button-pill sunset">
        Valider mon vote
        <i class="right-arrow fa-regular fa-circle-right"></i>
      </button>
    </div>
<% end %>
